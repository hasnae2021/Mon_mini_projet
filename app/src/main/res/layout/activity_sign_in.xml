<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sushii"
    android:orientation="vertical"

    android:padding="10dp"
    tools:context=".SignIn">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:text="Sign In"
        android:textColor="#e2062c"
        android:textSize="50dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username1"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextbackground"
        android:backgroundTint="@color/purple_200"
        android:cursorVisible="false"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:hint="Nom utilisateur"

        android:paddingLeft="20dp"

        android:textColorHint="#7E95B3"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/edittextbackground"
        android:backgroundTint="@color/purple_200"
        android:cursorVisible="false"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:hint="Mot de passe"
        android:paddingLeft="20dp"
        android:password="true"
        android:textColorHint="#7E95B3"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/signin"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittextbackground"
        android:backgroundTint="#0D0"
        android:text="Se connecter"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/others"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/socialicons"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="159dp"
        android:layout_marginLeft="159dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="24dp"
        android:text="Visiter notre page sur"

        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/socialicons"

        android:gravity="center">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/google"
            />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/facebook1" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/instagram"/>


    </LinearLayout>


</LinearLayout>