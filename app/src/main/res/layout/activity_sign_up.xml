<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sushii"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SignUp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:text="Sign Up"
        android:textColor="#ed4242"
        android:textSize="50dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextbackground"
        android:hint="Nom utilisateur"
        android:textColorHint="#7E95B3"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:backgroundTint="#edcc42"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextbackground"
        android:hint="Mot de passe"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:backgroundTint="#edcc42"
        android:password="true"
        android:textColorHint="#7E95B3"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/repassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextbackground"
        android:hint="Confirmer le mot de passe"
        android:paddingLeft="20dp"
        android:backgroundTint="#edcc42"
        android:password="true"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:textColorHint="#7E95B3"
        android:textSize="20dp" />

    <Button
        android:id="@+id/signup"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextbackground"
        android:backgroundTint="#ed4242"
        android:text="Créer un compte "
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signin"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"

        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextbackground"
        android:backgroundTint="#0D0"
        android:text="Vous avez déja un compte"
        android:textColor="@color/white"
        android:textSize="15dp"

        android:textStyle="bold" />


    <TextView
        android:id="@+id/others"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/socialicons"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="159dp"
        android:layout_marginLeft="159dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Visiter notre page sur"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/socialicons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:gravity="center">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/google" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/facebook1" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/instagram" />

    </LinearLayout>
</LinearLayout>